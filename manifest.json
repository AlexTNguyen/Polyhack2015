{
  "name": "Selected Text",
  "manifest_version": 2,
  "version": "0.1",
  "description": "Selected Text",
  "browser_action": {
  "default_title": "Selected Text",
  "default_icon": "icon.png",
  "default_popup": "popup.html" 
},
  "permissions": [
  "tabs",
  "chrome://favicon/",
  "http://*/*", 
  "https://*/*"
],
  "content_scripts": [
  {
  "matches": ["http://*/*"],
  "js": ["selection.js"],
  "run_at": "document_start",
  "all_frames": true
  }
  ]
}